@model Pudicitia.Identity.App.Account.CreateAuthorizationCodeCommand

@{
    ViewData["Title"] = "Sign In";
}

<div class="container account-login-container">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form asp-controller="Account" asp-action="SignIn" method="post" class="form-horizontal">
                    <input type="hidden" asp-for="ResponseType" />
                    <input type="hidden" asp-for="ClientId" />
                    <input type="hidden" asp-for="RedirectUri" />
                    <input type="hidden" asp-for="Scope" />
                    <input type="hidden" asp-for="State" />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label form-label"></label>
                        <input asp-for="UserName" class="form-control form-input form-input-center" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label form-label"></label>
                        <input asp-for="Password" class="form-control form-input form-input-center" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-brand btn-brand-big">Sign In</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
